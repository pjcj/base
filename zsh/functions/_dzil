#compdef dzil

_dzil() {
    local program=dzil
    typeset -A opt_args
    local curcontext="$curcontext" state line context


        # ---- Command: 
        _arguments -s  \
            '1: :->cmd1' \
            '*: :->args' \
            && ret=0


        case $state in
        cmd1)
            _alternative 'args:cmd2:((add\:"add modules to an existing dist" authordeps\:"list your distributions author dependencies" build\:"build your dist" clean\:"clean up after build, test, or install" commands\:"list the applications commands" help\:"Show command help" install\:"install your dist" listdeps\:"print your distributions prerequisites" new\:"mint a new dist" nop\:"do nothing: initialize dzil, then exit" release\:"release your dist" run\:"run stuff in a dir where your dist is built" setup\:"set up a basic global config file" smoke\:"smoke your dist" test\:"test your dist"))'
        ;;

        args)
            case $line[1] in
            _meta)

                # ---- Command: _meta
                _arguments -s -C \
                    '1: :->cmd1' \
                    '2: :->cmd2' \
                    '*: :->args' \
                    && ret=0


                case $state in
                cmd2)
                    _alternative 'args:cmd3:((completion\:"Shell completion functions" pod\:"Pod documentation"))'
                ;;

                args)
                    case $line[2] in
                    completion)

                        # ---- Command: _meta completion
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '3: :->cmd3' \
                            '*: :->args' \
                            && ret=0


                        case $state in
                        cmd3)
                            _alternative 'args:cmd4:((generate\:"Generate self completion"))'
                        ;;

                        args)
                            case $line[3] in
                            generate)

                                # ---- Command: _meta completion generate
                                _arguments -s -C \
                                    '1: :->cmd1' \
                                    '2: :->cmd2' \
                                    '3: :->cmd3' \
                                    '--verbose[log additional output]' \
                                    '-v[log additional output]' \
                                    '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                                    '-V[log additional output from some plugins only]:verbose-plugin' \
                                    '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                                    '-I[additional @INC dirs]:lib-inc:_files' \
                                    '--help[Show command help]' \
                                    '-h[Show command help]' \
                                    '--name[name of the program (optional, override name in spec)]:name' \
                                    '--zsh[for zsh]' \
                                    '--bash[for bash]' \
                                    && ret=0


                            ;;
                            esac

                        ;;

                        esac
                    ;;
                    pod)

                        # ---- Command: _meta pod
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '3: :->cmd3' \
                            '*: :->args' \
                            && ret=0


                        case $state in
                        cmd3)
                            _alternative 'args:cmd4:((generate\:"Generate self pod"))'
                        ;;

                        args)
                            case $line[3] in
                            generate)

                                # ---- Command: _meta pod generate
                                _arguments -s -C \
                                    '1: :->cmd1' \
                                    '2: :->cmd2' \
                                    '3: :->cmd3' \
                                    '--verbose[log additional output]' \
                                    '-v[log additional output]' \
                                    '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                                    '-V[log additional output from some plugins only]:verbose-plugin' \
                                    '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                                    '-I[additional @INC dirs]:lib-inc:_files' \
                                    '--help[Show command help]' \
                                    '-h[Show command help]' \
                                    && ret=0


                            ;;
                            esac

                        ;;

                        esac
                    ;;
                    esac

                ;;

                esac
            ;;
            add)

                # ---- Command: add
                _arguments -s -C \
                    '1: :->cmd1' \
                    '--verbose[log additional output]' \
                    '-v[log additional output]' \
                    '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                    '-V[log additional output from some plugins only]:verbose-plugin' \
                    '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                    '-I[additional @INC dirs]:lib-inc:_files' \
                    '--help[Show command help]' \
                    '-h[Show command help]' \
                    '--profile[name of the profile to use]:profile' \
                    '-p[name of the profile to use]:profile' \
                    '--provider[name of the profile provider to use]:provider' \
                    '-P[name of the profile provider to use]:provider' \
                    && ret=0


            ;;
            authordeps)

                # ---- Command: authordeps
                _arguments -s -C \
                    '1: :->cmd1' \
                    '--verbose[log additional output]' \
                    '-v[log additional output]' \
                    '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                    '-V[log additional output from some plugins only]:verbose-plugin' \
                    '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                    '-I[additional @INC dirs]:lib-inc:_files' \
                    '--help[Show command help]' \
                    '-h[Show command help]' \
                    '--root[the root of the dist; defaults to .]:root' \
                    '--missing[list only the missing dependencies]' \
                    '--versions[include required version numbers in listing]' \
                    && ret=0


            ;;
            build)

                # ---- Command: build
                _arguments -s -C \
                    '1: :->cmd1' \
                    '--verbose[log additional output]' \
                    '-v[log additional output]' \
                    '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                    '-V[log additional output from some plugins only]:verbose-plugin' \
                    '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                    '-I[additional @INC dirs]:lib-inc:_files' \
                    '--help[Show command help]' \
                    '-h[Show command help]' \
                    '--trial[build a trial release that PAUSE will not index]' \
                    '--tgz[build a tarball (default behavior)]' \
                    '--in[the directory in which to build the distribution]:in' \
                    && ret=0


            ;;
            clean)

                # ---- Command: clean
                _arguments -s -C \
                    '1: :->cmd1' \
                    '--verbose[log additional output]' \
                    '-v[log additional output]' \
                    '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                    '-V[log additional output from some plugins only]:verbose-plugin' \
                    '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                    '-I[additional @INC dirs]:lib-inc:_files' \
                    '--help[Show command help]' \
                    '-h[Show command help]' \
                    '--dry-run[dont actually remove anything, just show what would be done]' \
                    '-n[dont actually remove anything, just show what would be done]' \
                    && ret=0


            ;;
            commands)

                # ---- Command: commands
                _arguments -s -C \
                    '1: :->cmd1' \
                    '--verbose[log additional output]' \
                    '-v[log additional output]' \
                    '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                    '-V[log additional output from some plugins only]:verbose-plugin' \
                    '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                    '-I[additional @INC dirs]:lib-inc:_files' \
                    '--help[Show command help]' \
                    '-h[Show command help]' \
                    && ret=0


            ;;
            help)

                # ---- Command: help
                _arguments -s -C \
                    '1: :->cmd1' \
                    '2: :->cmd2' \
                    '*: :->args' \
                    && ret=0


                case $state in
                cmd2)
                    _alternative 'args:cmd3:((add authordeps build clean commands install listdeps new nop release run setup smoke test))'
                ;;

                args)
                    case $line[2] in
                    _meta)

                        # ---- Command: help _meta
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '3: :->cmd3' \
                            '*: :->args' \
                            && ret=0


                        case $state in
                        cmd3)
                            _alternative 'args:cmd4:((completion pod))'
                        ;;

                        args)
                            case $line[3] in
                            completion)

                                # ---- Command: help _meta completion
                                _arguments -s -C \
                                    '1: :->cmd1' \
                                    '2: :->cmd2' \
                                    '3: :->cmd3' \
                                    '4: :->cmd4' \
                                    '*: :->args' \
                                    && ret=0


                                case $state in
                                cmd4)
                                    _alternative 'args:cmd5:((generate))'
                                ;;

                                args)
                                    case $line[4] in
                                    generate)

                                        # ---- Command: help _meta completion generate
                                        _arguments -s -C \
                                            '1: :->cmd1' \
                                            '2: :->cmd2' \
                                            '3: :->cmd3' \
                                            '4: :->cmd4' \
                                            '--verbose[log additional output]' \
                                            '-v[log additional output]' \
                                            '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                                            '-V[log additional output from some plugins only]:verbose-plugin' \
                                            '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                                            '-I[additional @INC dirs]:lib-inc:_files' \
                                            '--help[Show command help]' \
                                            '-h[Show command help]' \
                                            '--all[]' \
                                            && ret=0


                                    ;;
                                    esac

                                ;;

                                esac
                            ;;
                            pod)

                                # ---- Command: help _meta pod
                                _arguments -s -C \
                                    '1: :->cmd1' \
                                    '2: :->cmd2' \
                                    '3: :->cmd3' \
                                    '4: :->cmd4' \
                                    '*: :->args' \
                                    && ret=0


                                case $state in
                                cmd4)
                                    _alternative 'args:cmd5:((generate))'
                                ;;

                                args)
                                    case $line[4] in
                                    generate)

                                        # ---- Command: help _meta pod generate
                                        _arguments -s -C \
                                            '1: :->cmd1' \
                                            '2: :->cmd2' \
                                            '3: :->cmd3' \
                                            '4: :->cmd4' \
                                            '--verbose[log additional output]' \
                                            '-v[log additional output]' \
                                            '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                                            '-V[log additional output from some plugins only]:verbose-plugin' \
                                            '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                                            '-I[additional @INC dirs]:lib-inc:_files' \
                                            '--help[Show command help]' \
                                            '-h[Show command help]' \
                                            '--all[]' \
                                            && ret=0


                                    ;;
                                    esac

                                ;;

                                esac
                            ;;
                            esac

                        ;;

                        esac
                    ;;
                    add)

                        # ---- Command: help add
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '--verbose[log additional output]' \
                            '-v[log additional output]' \
                            '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                            '-V[log additional output from some plugins only]:verbose-plugin' \
                            '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                            '-I[additional @INC dirs]:lib-inc:_files' \
                            '--help[Show command help]' \
                            '-h[Show command help]' \
                            '--all[]' \
                            && ret=0


                    ;;
                    authordeps)

                        # ---- Command: help authordeps
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '--verbose[log additional output]' \
                            '-v[log additional output]' \
                            '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                            '-V[log additional output from some plugins only]:verbose-plugin' \
                            '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                            '-I[additional @INC dirs]:lib-inc:_files' \
                            '--help[Show command help]' \
                            '-h[Show command help]' \
                            '--all[]' \
                            && ret=0


                    ;;
                    build)

                        # ---- Command: help build
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '--verbose[log additional output]' \
                            '-v[log additional output]' \
                            '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                            '-V[log additional output from some plugins only]:verbose-plugin' \
                            '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                            '-I[additional @INC dirs]:lib-inc:_files' \
                            '--help[Show command help]' \
                            '-h[Show command help]' \
                            '--all[]' \
                            && ret=0


