                        # ---- Command: help clean
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '--verbose[log additional output]' \
                            '-v[log additional output]' \
                            '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                            '-V[log additional output from some plugins only]:verbose-plugin' \
                            '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                            '-I[additional @INC dirs]:lib-inc:_files' \
                            '--help[Show command help]' \
                            '-h[Show command help]' \
                            '--all[]' \
                            && ret=0


                    ;;
                    commands)

                        # ---- Command: help commands
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '--verbose[log additional output]' \
                            '-v[log additional output]' \
                            '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                            '-V[log additional output from some plugins only]:verbose-plugin' \
                            '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                            '-I[additional @INC dirs]:lib-inc:_files' \
                            '--help[Show command help]' \
                            '-h[Show command help]' \
                            '--all[]' \
                            && ret=0


                    ;;
                    install)

                        # ---- Command: help install
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '--verbose[log additional output]' \
                            '-v[log additional output]' \
                            '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                            '-V[log additional output from some plugins only]:verbose-plugin' \
                            '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                            '-I[additional @INC dirs]:lib-inc:_files' \
                            '--help[Show command help]' \
                            '-h[Show command help]' \
                            '--all[]' \
                            && ret=0


                    ;;
                    listdeps)

                        # ---- Command: help listdeps
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '--verbose[log additional output]' \
                            '-v[log additional output]' \
                            '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                            '-V[log additional output from some plugins only]:verbose-plugin' \
                            '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                            '-I[additional @INC dirs]:lib-inc:_files' \
                            '--help[Show command help]' \
                            '-h[Show command help]' \
                            '--all[]' \
                            && ret=0


                    ;;
                    new)

                        # ---- Command: help new
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '--verbose[log additional output]' \
                            '-v[log additional output]' \
                            '--verbose-plugin[log additional output from some plugins only]:verbose-plugin' \
                            '-V[log additional output from some plugins only]:verbose-plugin' \
                            '--lib-inc[additional @INC dirs]:lib-inc:_files' \
                            '-I[additional @INC dirs]:lib-inc:_files' \
                            '--help[Show command help]' \
                            '-h[Show command help]' \
                            '--all[]' \
                            && ret=0


                    ;;
                    nop)

                        # ---- Command: help nop
                        _arguments -s -C \
                            '1: :->cmd1' \
                            '2: :->cmd2' \
                            '--verbose[log additional output]' \
                            '-v[log additional output]' \
